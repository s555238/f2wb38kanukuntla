extends layout
block content
  h1= title
  - let results = [{shirtCost:20, pantCost:10, hoodieCost:39},{shirtCost:30, pantCost:40, hoodieCost:50},{shirtCost:27, pantCost:59, hoodieCost:19}]
  div(class="container-fluid mt-3")
  div(class="row")
    each temp,index in results
        div(class="col-sm-2" )  #{temp.shirtCost} -  #{temp.pantCost} - #{temp.hoodieCost}
  br
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<results.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{results[i].shirtCost}
    -}
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }